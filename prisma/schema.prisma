generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           BigInt         @id
  username     String?
  firstName    String?
  lastName     String?
  createdAt    DateTime       @default(now())
  messages     Message[]
  interactions Interaction[] // ← новое
  JournalEntry JournalEntry[]
}

model Message {
  id           String         @id @default(uuid())
  content      String
  sender       Sender
  userId       BigInt
  user         User           @relation(fields: [userId], references: [id])
  createdAt    DateTime       @default(now())
  interaction  Interaction?
  JournalEntry JournalEntry[]

  @@index([userId])
}

enum Sender {
  bot
  user
}

// Новая сущность — структурированный анализ
model Interaction {
  id     String @id @default(uuid())
  userId BigInt
  user   User   @relation(fields: [userId], references: [id])

  // Ссылка на исходное сообщение пользователя (опционально, но полезно)
  userMessageId String?  @unique
  userMessage   Message? @relation(fields: [userMessageId], references: [id])

  // Цепь событий
  trigger          String
  thought          String
  emotionName      String
  emotionIntensity Int
  action           String
  consequence      String

  // Паттерны (можно хранить как JSON или через связь Many-to-Many)
  patterns Json // ← простой и гибкий вариант

  // Анализ
  goal                  String
  ineffectivenessReason String
  hiddenNeed            String

  // Альтернативы
  alternatives Json // массив строк

  // Сырой JSON (для отладки или будущего парсинга)
  rawResponse String

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model JournalEntry {
  id     String @id @default(uuid())
  userId BigInt
  user   User   @relation(fields: [userId], references: [id])

  type        JournalEntryType @default(INSIGHT)
  content     String // Краткая формулировка (обязательная)
  description String? // Подробности (опционально)

  sourceMessageId String?
  sourceMessage   Message? @relation(fields: [sourceMessageId], references: [id])

  createdAt  DateTime @default(now())
  confidence Float? // 0.0–1.0, если нужно

  @@index([userId])
  @@index([type])
}

enum JournalEntryType {
  INSIGHT
  PATTERN
  EMOTIONAL_STATE
  SELF_ASSESSMENT
  VALUE
  BELIEF
  GOAL
}
